{
    "name": "vasyltech/flarum-algolia-search",
    "description": "Replace the default Flarum search with Algolia search",
    "keywords": ["flarum", "algolia", "search"],
    "homepage": "https://vasyltech.com/",
    "license": "MIT",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "0.1.0-beta.8.1",
        "algolia/algoliasearch-client-php": ">=2.2.3"
    },
    "autoload": {
        "psr-4": {"VasylTech\\AlgoliaSearch\\": "src/"}
    },
    "extra": {
        "flarum-extension": {
            "title": "Algolia Search",
            "icon": {
                "name": "fab fa-algolia",
                "backgroundColor": "#5468FF",
                "color": "#fff"
            }
        }
    }
}
